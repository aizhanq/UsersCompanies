@model IEnumerable<UsersCompanies.Web.Models.CompanyViewModel>

@{
    ViewBag.Title = "Companies";
}

<h2>Companies</h2>

<p>
    <a asp-action="CreateCompany">Create New</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Users", "GetUsersByCompanyId", new { companyId = item.Id })
                @Html.ActionLink("Jobs", "GetJobsByCompanyId", new { companyId = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCompany", new { id = item.Id })
                @Html.ActionLink("Delete", "DeleteCompany", new { id = item.Id })
            </td>
        </tr>
    }

</table>